        function getUrl(companyCode, startDate, endDate) {
            let url = `/api/v1/admin/tracker-reports.listing?companyCode=${companyCode}&startDate=${startDate}&endDate=${endDate}`
            return url
        }

        function loadAdminDataTable() {
            let currentDate = moment().utc().toISOString()
            let search = $('#select_company_code').val()
            let start = $('#startDate').val()
            let end = $('#endDate').val()
            let startDate = ''
            let endDate = ''

            $('#startDate').change(function () {
                start = this.value
            })

            $('#endDate').on('change', function () {
                end = this.value
            })

            if (start && end) {
                startDate = moment(start, 'DD/MM/YYYY').format("YYYY-MM-DD");
                endDate = moment(end, 'DD/MM/YYYY').format("YYYY-MM-DD");
                if (!(new Date(startDate).getTime() <= new Date(endDate).getTime()) || new Date(startDate).getTime() >= new Date(moment()).getTime()) {
                    toastr.error('Selected date range is invalid.', 'Error')
                    $('#filter-name-role, #filter-name-status, #filter-lastMonth').addClass('hide')
                    return;
                }
            }

          
            $('#select_company_code').on('change', function () {
                search = this.value
            });



            let generateUrl = getUrl(search, startDate, endDate)
            // Initiate datatable

            $('.dataTables-example').DataTable({
                destroy: true,
                "search": true,
                "processing": true,
                "filter": true,
                "orderMulti": false,
                // stateSave: true,
                'serverSide': true,
                "ajax": {
                    "url": generateUrl,
                    "type": "GET",
                    "datatype": "json",
                    // "dataSrc": ""
                },
                "columns": [
                    { render(data, type, row, meta){
                        let text = `<div style="text-transform: capitalize;">${row._id.companyCode}</div>`
                        return text
                    }},
                    { render(data, type, row, meta){
                        return row._id.date
                    }},
                    { render(data, type, row, meta){
                        return row.count
                    }},
                    
                    { 
                        render(data, type, row, meta){
                            let text = `<div class='action-btn'>
                                            <a href="api/v1/admin/tracker-reports.byDate?companyCode=${row._id.companyCode}&date=${row._id.date}"><i data-toggle="tooltip" data-placement="top" title="View" class="fa fa-eye" aria-hidden="true"></i></a>
                                           `
                         return text
}
}
