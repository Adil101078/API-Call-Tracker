        );
        $('#data_5 .input-daterange').datepicker({
            format: 'dd/mm/yyyy',
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true
        });



        function filterApi() {

            if ($('#admin-status').val() == 'true') {
                $('#filter-name-status').removeClass('hide')
                $('#filter-name-status').text('Active')
                $('#filter-name-status').append('<a onclick="resetStatusFilter()" style = "color: #fff;" > <i class="fa fa-times" aria-hidden="true"></i></a >')
                loadAdminDataTable()
            }
            if ($('#admin-status').val() == 'false') {
                $('#filter-name-status').removeClass('hide')
                $('#filter-name-status').text('Inactive')
                $('#filter-name-status').append('<a onclick="resetStatusFilter()" style = "color: #fff;" > <i class="fa fa-times" aria-hidden="true"></i></a >')
                loadAdminDataTable()
            }

            if ($('#select_company_code').val() !== '') {
                $('#filter-name-role').removeClass('hide')
                $('#filter-name-role').text($('#select_company_code').val())
                $('#filter-name-role').append('<a onclick="resetRoleFilter()" style = "color: #fff;" > <i class="fa fa-times" aria-hidden="true"></i></a >')
                loadAdminDataTable()
            }
            if ($('#startDate').val() !== '' && $('#endDate').val() !== '') {
                let start = $('#startDate').val()
                let end = $('#endDate').val()
                $('#filter-lastMonth').removeClass('hide')
                $('#filter-lastMonth').text(`${start} - ${end}`)
                $('#filter-lastMonth').append('<a onclick="resetDateFilter()" style = "color: #fff;" > <i class="fa fa-times" aria-hidden="true"></i></a >')
                loadAdminDataTable()
            }
        }

        function resetDateFilter() {
            $('#startDate, #endDate, #last-30-days').val('')
            $('#filter-lastMonth').addClass('hide')
            loadAdminDataTable()
        }

        function resetRoleFilter() {
            $('#select_company_code').val('')
            $('#filter-name-role').addClass('hide')
            loadAdminDataTable()

        }

        
        function resetFilter() {
            $('#startDate').attr('disabled', false)
            $('#endDate').attr('disabled', false)
            $('#select_company_code').val('')
            $('#startDate').val('')
            $('#endDate').val('')
            $('#filter-name-role, #filter-name-status, #filter-lastMonth').addClass('hide')
            loadAdminDataTable()

        }

        function closeFilter() {
            $('.dropdown-filter').removeClass('open')

        }
       
